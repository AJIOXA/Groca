@model LoginModel
@{
    ViewBag.Title = "Log In";
    Layout = "_Layout";
}

<link rel="stylesheet" href="/css/form.css">
<div style="height:72vh;">
    @if (User.Identity.IsAuthenticated == false)
    {
    <div class="form" data-aos="fade-up" style="width:22%">
        <div class="head">
            <h1>Welcome</h1>
        </div>
        <form asp-action="Login" asp-controller="Account" method="post">
            <div class="text-danger" asp-validation-summary="All"></div>
            @*<div asp-validation-summary="All"></div>*@
            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            @*<label asp-for="ProductID">Product ID: <span>*</span></label>
            <div><span asp-validation-for="ProductID" class="text-danger"></span></div>
            <input class="form-control" asp-for="ProductID" />*@
            @*<div><span asp-validation-for="Name" class="text-danger"></span></div>*@
            <input asp-for="Name" class="form-control" placeholder="username" />
            @*<span asp-validation-for="Password" class="text-danger"></span>*@
            <input asp-for="Password" class="form-control" placeholder="password" />
            <input type ="checkbox" id="check" required/><label id="checklb">I'm not robot</label>
            <div class="submit">
                <button type="submit">Login<i class="fa fa-sign-in" aria-hidden="true" style="margin-left:4px;"></i></button>

            </div>


        </form>
        <div id="signup">
            <p>Don't have an account?</p>
            <a asp-controller="Account" asp-action="Create">Sign Up</a>
        </div>
    </div>
    
    }
    else
    {
   
        <div id="login-info">
            <h1>You are currently login as @User.Identity.Name</h1>
            
            <h1>If you want to switch account, please log out first</h1>
        </div>
    }
</div>
